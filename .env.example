# BUDE Global Neuro-Chain - Environment Configuration
# Copy this file to .env.local for development

# ============================================
# APPLICATION SETTINGS
# ============================================

# Application title displayed in browser tab
VITE_APP_TITLE=BUDE Global Neuro-Chain

# Application version (for cache busting and display)
VITE_APP_VERSION=1.0.0

# ============================================
# FEATURE FLAGS
# ============================================

# Enable Google Analytics tracking (requires VITE_GA_ID)
VITE_ENABLE_ANALYTICS=false

# Enable the live data editor panel (set to false for production)
VITE_ENABLE_DATA_EDITOR=true

# Enable debug mode (extra console logging, performance metrics)
VITE_DEBUG_MODE=false

# ============================================
# PERFORMANCE SETTINGS
# ============================================

# Maximum nodes to render at once (for viewport culling)
VITE_MAX_VISIBLE_NODES=1000

# Target animation frames per second
VITE_ANIMATION_FPS=60

# Enable Web Workers for heavy computations
VITE_ENABLE_WORKERS=true

# ============================================
# ANALYTICS (Optional)
# ============================================

# Google Analytics Measurement ID (e.g., G-XXXXXXXXXX)
VITE_GA_ID=

# ============================================
# API CONFIGURATION (Future)
# ============================================

# Base URL for API endpoints (if data is loaded dynamically)
VITE_API_BASE_URL=

# API timeout in milliseconds
VITE_API_TIMEOUT=10000
